# ====================================
# CONFIGURACIÓN DE SKYTIDECRM AGENT
# ====================================
# Copia este archivo a .env y reemplaza los valores

# ====================================
# SUPABASE (REQUERIDO)
# ====================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ====================================
# OPENAI (REQUERIDO)
# ====================================
OPENAI_API_KEY=sk-proj-...
OPENAI_CHAT_MODEL=gpt-4o  # Opcional, default: gpt-4o

# ====================================
# GEMINI AI (REQUERIDO)
# Para procesamiento de audio e imágenes
# ====================================
GEMINI_API_KEY=AIzaSy...

# ====================================
# REDIS (OPCIONAL - RECOMENDADO PARA PRODUCCIÓN)
# Para persistencia de estado entre reinicios
# ====================================
REDIS_URL=redis://default:password@host:port
REDIS_CHAT_CACHE_N=30  # Número de mensajes a cachear
REDIS_CHAT_CACHE_TTL=600  # TTL en segundos

# ====================================
# GUPSHUP (REQUERIDO)
# Para notificaciones internas y escalamiento
# ====================================
GUPSHUP_NOTIF_API_KEY=sk_...
GUPSHUP_NOTIF_SOURCE=573001234567  # Número emisor de WhatsApp
GUPSHUP_ESCALATION_TEMPLATE_ID=uuid-del-template
GUPSHUP_NOTIF_APP_NAME=nombre-de-tu-app

# ====================================
# LANGFUSE CLOUD (OPCIONAL - RECOMENDADO)
# Observabilidad y debugging de IA
# Crear cuenta gratis en cloud.langfuse.com
# ====================================
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=pk_lf_...
LANGFUSE_SECRET_KEY=sk_lf_...

# ====================================
# CONFIGURACIÓN DE GATEWAY
# ====================================
GATEWAY_PORT=8080  # Puerto del Express Gateway
PYTHON_SERVICE_URL=http://python-service:8000  # URL interna del servicio Python
EXPRESS_GATEWAY_URL=http://express-gateway:8080  # URL interna del Gateway

# ====================================
# CONFIGURACIÓN DE DESARROLLO (OPCIONAL)
# ====================================
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_MORGAN=false  # Logging HTTP en Express
LOG_VERBOSE=false  # Logs detallados en Python